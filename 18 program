
m = int(input("Enter the month number (1-12): "))

if m == 2:
    print("28 or 29 days")
elif m in [1, 3, 5, 7, 8, 10, 12]:
    print("31 days")
elif m in [4, 6, 9, 11]:
    print("30 days")
else:
    print("Invalid month number")
